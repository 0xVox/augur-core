macro hadamard($aflat, $arows, $acols, $bflat, $brows, $bcols):
    with a = array($arows):
        with i = 0:
            while i < $arows:
                a[i] = array($acols)
                with j = 0:
                    while j < $acols:
                        a[i][j] = $aflat[j + i*$acols]
                        j += 1
                i += 1
        with b = array($brows):
            with i = 0:
                while i < $brows:
                    b[i] = array($bcols)
                    with j = 0:
                        while j < $bcols:
                            b[i][j] = $bflat[j + i*$bcols]
                            j += 1
                    i += 1
            with c = array($arows):
                if $bcols > 1:
                    with i = 0:
                        while i < $bcols:
                            c[i] = array($bcols)
                            i += 1
                with i = 0:
                    while i < $arows:
                        if $bcols == 1 and $acols == 1:
                            c[i] = a[i] * b[i]
                        else:
                            with j = 0:
                                while j < $bcols:
                                    c[i][j] += a[i][j] * b[i][j]
                                    j += 1
                        i += 1
                c

def test_hadamard():
    a = [[1, 4], [2, 5], [3, 6]]
    arows = 3
    acols = 2
    asz = arows * acols
    aflat = array(asz)
    i = 0
    while i < arows:
        j = 0
        while j < acols:
            aflat[j + i*acols] = a[i][j]
            j += 1
        i += 1
    b = [[1, 2], [3, 4], [5, 6]]
    brows = 2
    bcols = 3
    bsz = brows * bcols
    bflat = array(bsz)
    i = 0
    while i < brows:
        j = 0
        while j < bcols:
            bflat[j + i*bcols] = b[i][j]
            j += 1
        i += 1
    expected = [[1, 8], [6, 20], [15, 36]]
    actual = hadamard(aflat, arows, acols, bflat, brows, bcols)
    i = 0
    while i < acols:
        j = 0
        while j < bcols:
            if expected[i][j] != actual[i][j]:
                return(0)
            j += 1
        i += 1
    return(1)

macro sum($a, $asz):
    with total = 0:
        with i = 0:
            while i < $asz:
                total += $a[i]
                i += 1
        total

def test_sum():
    a = [2, 10, 4, 2, 7, 1]
    asz = 6
    asum = sum(a, asz)
    expected = 26
    if asum == expected:
        return(1)
    else:
        return(0)
